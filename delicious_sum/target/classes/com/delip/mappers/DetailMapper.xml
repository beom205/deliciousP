<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.delip.mappers.DetailMapper">

<select id="read" resultType="Detail">
		select * from dtb_restaurant where rno = #{rno}
</select>
	
<insert id="create">
		insert into dtb_restaurant (rname,raddress,rtel,rhomepage,rinfo, rholiday, rtime)
		values(#{rname},#{raddress},#{rtel},#{rhomepage},#{rinfo},#{rholiday},#{rtime})
</insert>

<update id="update">
	update dtb_restaurant 
set rname = #{rname}, 
	raddress = #{raddress},
    rtel = #{rtel}
where rno = #{rno};  
</update>	
	
</mapper>